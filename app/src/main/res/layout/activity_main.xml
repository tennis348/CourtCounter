<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#00695c"
        android:fontFamily="sans-"
        android:onClick="btn_reset"
        android:text="Reset"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp">

        <TextView
            android:id="@+id/team_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Team B"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/team_b_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="78sp" />

        <Button
            android:id="@+id/b_3point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#00695c"
            android:fontFamily="sans-"
            android:onClick="pointB3"
            android:text="+3 Points"
            android:textColor="@android:color/background_light"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_2point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#00695c"
            android:fontFamily="sans-"
            android:onClick="pointB2"
            android:text="+2 Points"
            android:textColor="@android:color/background_light"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_freepoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#00695c"
            android:fontFamily="sans-"
            android:onClick="pointB1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Free Throw"
            android:textColor="@android:color/background_light"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/team_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Team A"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/team_a_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="78sp" />

        <Button
            android:id="@+id/a_3point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#00695c"
            android:fontFamily="sans-"
            android:onClick="pointA3"
            android:text="+3 Points"
            android:textColor="@android:color/background_light"
            android:textSize="25sp" />

        <Button
            android:id="@+id/a_2point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#00695c"
            android:fontFamily="sans-"
            android:onClick="pointA2"
            android:text="+2 Points"
            android:textColor="@android:color/background_light"
            android:textSize="25sp" />

        <Button
            android:id="@+id/freepoint_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#00695c"
            android:fontFamily="sans-"
            android:onClick="pointA1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Free Throw"
            android:textColor="@android:color/background_light"
            android:textSize="25sp" />
    </LinearLayout>
</RelativeLayout>